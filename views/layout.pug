doctype html
html
  head
    block head
      title=title
      link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
      link(rel='stylesheet' href='/stylesheets/main.css')
      script(src="https://kit.fontawesome.com/0ccb37cdbe.js" crossorigin="anonymous")
      script(src="/javascripts/search.js")
  body
    div(class='page-wrapper')
      nav#navbar
        a(href='/' id="homeButton")
          img(id="homeButtonImage" src="../images/jsjungle_logo.png" alt="logo")

        span(class="searchIcon" style="font-size: 1.6em; color: LightGreen;")
          i(class="fas fa-search" id="searchIcon")

        input(id="searchBar" type="search" placeholder="Search..." name='searchbar' class="textField" maxlength="70")

        if authenticated
          a(href='/users/' + user.id id="profileButton")
            span(style="font-size: 2em; color: LightGreen;")
              i(class="fas fa-user")
        else
          a(href='/users/login' id="logInLink")
            span(style="font-size: 2em; color: LightGreen;")
              i(class="fas fa-sign-in-alt")

      block content
  
      div(id='footer-container')
        div(id='footer')
          div(class='footer-button-wrapper')
            a(href='https://github.com/jpremo' target="_blank" class='footer-link')
                div(class='footer-link-image-wrapper')
                    i(class="fab fa-github fa-2x")


